# ONVIF gRPC Server Environment Variables
# Copy this file to .env and modify the values as needed

# Server Configuration
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
GRPC_MAX_WORKERS=10
GRPC_ENABLE_REFLECTION=true
LOG_LEVEL=INFO

# ONVIF Configuration
ONVIF_WSDL_DIR=
ONVIF_TIMEOUT=30
ONVIF_CONNECTION_TIMEOUT=10
ONVIF_MAX_RETRIES=3
ONVIF_RETRY_DELAY=1.0
ONVIF_ENABLE_CACHING=true
ONVIF_CACHE_TTL=300

# Database Configuration
DB_ENABLED=false
DB_HOST=localhost
DB_PORT=27017
DB_NAME=onvif_grpc
DB_USERNAME=
DB_PASSWORD=
DB_CONNECTION_STRING=

# Security Configuration
TLS_ENABLED=false
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=
TLS_CA_FILE=
AUTH_REQUIRED=false
AUTH_TOKEN=

# Monitoring Configuration
METRICS_ENABLED=false
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Application Configuration
SERVICE_TYPE=demo
DEBUG=false
RELOAD=false
